<div class="container-lg">
  <div class="row">
    <div class= "col-12">
      <%#= render 'plots/filter_bar' %>
    </div>
  </div>
</div>

<div class = "container-lg">
  <div class= "row">
    <div class="col-4" >
      <div class="bg-white" id="map-container">
        <%= render 'plots/map' %>
      </div>
    </div>
    <div class="col-8 px-2">
      <% if @plots.size > 0 %>
        <div class="index-grid">
          <% @plots.each do |plot| %>
            <%= render 'plots/card', plot: plot %>
          <% end %>
        </div>
      <% else %>
        <h6 class="pl-4 none-msg"><span class="highlight-blue">Sorry, no plots match your query.</span></h6>
      <% end %>
    </div>
  </div>
</div>
