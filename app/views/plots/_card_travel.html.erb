<div class="card-travel-banner">
  <% if params[:destination].blank? %>

  <% else %>
    <% travel_hash = plot.travel_time(params[:destination],'transit') %>
    <div class="text-center ml-2">
      <h6 class="mb-0 "><%= travel_hash[:dist] %></h6>
      <h6 class="mb-0 grey bold">miles</h6>
    </div>
    <div class="text-center mx-2">
      <h6 class="mb-0 "><i class="fas fa-subway"></i></h6>
      <h6 class="mb-0 grey bold"><%= travel_hash[:time].gsub(/hours?/,"h").gsub(/mins?/,"m") %></h6>
    </div>
    <div class="text-center mx-2">
      <h6 class="mb-0 "><i class="fas fa-car"></i></h6>
      <h6 class="mb-0 grey bold"><%= plot.travel_time(params[:destination],'driving')[:time].gsub(/hours?/,"h").gsub(/mins?/,"m") %></h6>
    </div>
  <% end %>
</div>
