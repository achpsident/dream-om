<div class="d-flex p-1 justify-content-center align-items-center border">
  <% if params[:destination].blank? %>
    <h6 class="mb-0 mx-2"><i class="fas black fa-subway mr-2"></i></h6>
    <h6 class="mb-0 mx-2"><i class="fas black fa-car mr-2"></i></h6>
   <!-- <h6 class="mb-0 mx-2"><i class="fas black fa-bicycle mr-2"></i></h6> -->
  <% else %>
    <% travel_hash = plot.travel_time(params[:destination],'transit') %>
    <h6 class="mb-0"><%= travel_hash[:dist] %> miles</h6>

    <h6 class="mb-0 mx-2">
      <i class="fas fa-subway mr-2"></i><%= travel_hash[:time] %></h6>
    <h6 class="mb-0 mx-2">
      <i class="fas fa-car mr-2"></i><%= plot.travel_time(params[:destination],'driving')[:time] %></h6>
<!--    <h6 class="mb-0 mx-2">
      <i class="fas fa-bicycle mr-2"></i><%=plot.travel_time(params[:destination],'bicycling')[:time] %></h6> -->
  <% end %>
</div>
