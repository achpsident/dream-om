  <p>save for icons</p>
</div>


<!-- container for all the plot info -->
<div class="flex-grow-1 m_font">

  <!-- first section with title, address, price -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="card-left">
      <h6 class="card-title m-0 l_font">BROOK VIEW</h6>
      <p class="mb-0 h_font">London EC8</p>
    </div>
    <div class="card-right text-right">
      <h6 class="card-subtitle blue"><%= @plot.property_type %></h6>
      <% a = @plot.price.to_s.size - 3 %>
      <p class="mb-0 bold h_font">Â£ <%= "#{@plot.price.to_s[0...a]},#{@plot.price.to_s[a..-1]}" %></p>
    </div>
  </div>

  <!-- second section with plot sizes, freehold or leasehold etc. -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="card-left">
      <% if @plot.plot_size.blank? == false %>
        <p class="mb-0 bold">Plot Size <span class="mx-1 bold blue"><%= @plot.plot_size %>acres</span></p>
      <% end %>
      <% if @plot.floor_size.blank? == false %>
        <p class="mb-0 bold">Floor Size <span class="mx-1 bold blue"><%= @plot.floor_size %>sq. ft.</span></p>
      <% end %>
    </div>
    <div class="card-right text-right">
      <% if @plot.ownership_type.blank? == false %>
        <p class="mb-0 bold"><%= @plot.ownership_type %></p>
      <% end %>
      <% if @plot.plan_granted == true %>
        <p class="mb-0 bold">Planning Granted</p>
      <% end %>
    </div>
  </div>

  <hr>
  <p class=""><%= @plot.description %></p>
  <hr>

  <!-- third section with publish dates -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="card-left">
      <% if @plot.first_published_date.blank? == false %>
        <p class="mb-0 s_font bold">First Published</p>
        <p class="mb-0 s_font bold"><%= @plot.first_published_date %></p>
      <% end %>
    </div>
    <div class="card-right text-right">
      <% if @plot.last_published_date.blank? == false %>
        <p class="mb-0 s_font bold">Last Updated</p>
        <p class="mb-0 s_font bold"><%= @plot.last_published_date %></p>
      <% end %>
    </div>
  </div>
</div>




