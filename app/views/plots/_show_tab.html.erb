<div class="tab-content" id="pills-tabContent">

  <!-- the plot tab -->
  <div class="tab-pane fade show active" id="pills-plot" role="tabpanel" aria-labelledby="pills-plot-tab">
    <div class="d-flex">
      <%= render 'plots/show_tab_info' %>
    </div>
  </div>

  <!-- the floorplan tab -->
  <div class="tab-pane fade" id="pills-floorplan" role="tabpanel" aria-labelledby="pills-floorplan-tab">
  <% if @plot.floor_plan_url.blank? %>
    <h6 class="pl-5"><span class="highlight-blue">Sorry, no floorplan was uploaded by agent.</span></h6>
  <% else %>
    <% @plot.floor_plan_url.each do |floor_url| %>
      <%= image_tag floor_url, crop: :fill, class: 'card-img-top p-3' %>
    <% end %>
  <% end %>

  </div>

  <!-- the map tab -->
  <div class="tab-pane fade" id="pills-map" role="tabpanel" aria-labelledby="pills-map-tab">
    <h1><%= render 'plots/map' %></h1>
  </div>
</div>
