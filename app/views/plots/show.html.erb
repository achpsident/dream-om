<div class="container-lg">
  <div class="row">

    <div class="col-xs-12 col-lg-6 p-0">
<!--       <div class="image-show" style='background-image: linear-gradient(rgba(255,255,255,0.1), rgba(255,255,255,0.1)), url("<%= @plot.image_urls.first %>")'>
      </div> -->
    <!--   <%= image_tag @plot.image_urls.first, crop: :fill, class: 'image-show' %> -->

      <div id="carouselExampleControls" class="carousel slide carousel" data-ride="carousel">
        <div class="carousel-inner">
          <% @plot.image_urls.each_with_index do |photo, index| %>
          <div class="carousel-item <%= index == 0 ? 'active' : '' %>">

            <img class="image-show-arc" src="<%= photo %>" alt="First slide">
            <div class="image-show-arc" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo %>)">
            </div>
          </div>
          <% end %>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon " aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon " aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
        </div>
      </div>

      <div class="d-flex justify-content-around align-items-center mx-4 mt-3">
        <div class="card-body">
          <h6 class="mb-0 mt-1"><%= "- #{@plot.agent_name}" %></h6>
          <p class="h_font ml-3 mb-1"><%= @plot.agent_phone %></p>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary text-white" type="submit">Request Viewing</button>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-lg-6 container-rt">
      <%= render 'plots/show_tab_headers' %>
      <%= render 'plots/show_tab' %>
    </div>

  </div>
</div>


