
<div class="d-flex justify-content-between">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item tab-show">
      <a class="nav-link active" id="pills-plot-tab" data-toggle="pill" href="#pills-plot" role="tab" aria-controls="pills-plot" aria-selected="true">Plot</a>
    </li>
    <li class="nav-item tab-show">
      <a class="nav-link" id="pills-floorplan-tab" data-toggle="pill" href="#pills-floorplan" role="tab" aria-controls="pills-floorplan" aria-selected="false">Floor Plan</a>
    </li>
    <li class="nav-item tab-show">
      <a class="nav-link" id="pills-map-tab" data-toggle="pill" href="#pills-map" role="tab" aria-controls="pills-map" aria-selected="false">Map</a>
    </li>
  </ul>
  <% if @shortlisted %>
    <%= link_to shortlist_path(@shortlisted), :method => :delete  do %>
      <h4 class="text-muted"><i class="fas fa-bookmark blue ">
      </i></h4>
    <% end %>
  <% else %>
    <%= link_to plot_shortlists_path(plot_id: @plot.id), :method => :post  do %>
      <h4 class="text-muted"><i class="fas fa-bookmark">
      </i></h4>
    <% end %>
  <% end %>
</div>
