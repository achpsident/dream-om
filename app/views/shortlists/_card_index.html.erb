            <% if plot.image_url.blank? == false %>
              <%= image_tag plot.image_url, crop: :fill, class: 'card-index-img' %>
            <% end %>

            <div class="card-body bg-light d-flex justify-content-between align-items-center py-3">
              <div class="card-left">
                <h6 class="m-0 grey" id="index-card-title">
                  <%= plot.street_name %>
                </h6>
                <p class="mb-0 grey h_font s_font">
                  <%= "#{plot.post_town} #{plot.outcode}" %>
                </p>
              </div>
              <div class="card-right text-right">
                <h6 class="card-subtitle blue bold"><%= plot.property_type %></h6>
                <% a = plot.price.to_s.size - 3 %>
                <p class="mb-0 grey bold h_font s_font">
                  <% if a >= 4 %>
                    <%= "£ #{plot.price.to_s[0]},#{plot.price.to_s[1..3]},#{plot.price.to_s[4..7]}" %>
                  <% else %>
                    <%= "£ #{plot.price.to_s[0...a]},#{plot.price.to_s[a..-1]}" %>
                  <% end %>
                </p>
              </div>

            </div>
          </div>

  <div class="col-8 px-2">
    <% if current_user.shortlists.size > 0 %>
      <div class="index-grid">
        <% current_user.shortlists.each do |shortlist| %>
          <%= link_to plot_path(shortlist.plot), class: "card-index-link" do  %>
            <%= render 'shortlists/card_index', plot: shortlist.plot %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <h6 class="pl-4 none-msg"><span class="highlight-blue">Sorry, no plots match your query.</span></h6>
    <% end %>
  </div>
