        <div class = "d-flex container mr-0 p-0">

          <div class="card card-index shadow-sm">
            <div class="plot-note">
              <div class="row ">
                <%= link_to shortlist_path(shortlist), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-times-circle xl_font f-shadow "></i>
                <% end %>
              </div>
              <!-- <div class="row mb-2">
                <i class="fas fa-comment-alt blue xl_font f-shadow"></i>
              </div> -->
            </div>

           <% if shortlist.plot.image_url.blank? == false %>
              <%= image_tag shortlist.plot.image_url, crop: :fill, class: 'card-index-img' %>
            <% end %>

            <div class="card-body bg-light d-flex justify-content-between align-items-center py-3">
              <div class="card-left">
                <h6 class="m-0 grey" id="index-card-title">
                  <%= shortlist.plot.street_name %>
                </h6>
                <p class="mb-0 grey h_font s_font">
                  <%= "#{shortlist.plot.post_town} #{shortlist.plot.outcode}" %>
                </p>
              </div>
              <div class="card-right text-right">
                <h6 class="card-subtitle blue bold"><%= shortlist.plot.property_type %></h6>
                <% a = shortlist.plot.price.to_s.size - 3 %>
                <p class="mb-0 grey bold h_font s_font">
                  <% if a >= 4 %>
                    <%= "£ #{shortlist.plot.price.to_s[0]},#{shortlist.plot.price.to_s[1..3]},#{shortlist.plot.price.to_s[4..7]}" %>
                  <% else %>
                    <%= "£ #{shortlist.plot.price.to_s[0...a]},#{shortlist.plot.price.to_s[a..-1]}" %>
                  <% end %>
                </p>
              </div>

            </div>
          </div>



        <div class="justify-content-center plot-profile">
      <!-- <div class="d-flex justify-content-center"> -->
            <div class="row grey justify-content-center">
              <h6 class="card-title thin mb-0 pt-2">Plot size</h6>
            </div>
            <div class="row blue justify-content-center mb-4">
              <%= shortlist.plot.plot_size%>m&sup2;
            </div>
            <div class="border-bottom">
            </div>
            <div class="row grey justify-content-center mt-4 pt-2">
              <h6 class= "card-title m-0 thin" >Floor size</h6>
            </div>
            <div class="row blue justify-content-center mb-4">
              <%= shortlist.plot.floor_size %>m&sup2;
            </div>

            <div class="border-bottom">
            </div>

            <div class="row grey justify-content-center thin mt-4 pt-1">
                <h6 class= "card-title thin m-0" >Freehold</h6>
              <!-- <#%= shortlist.plot.ownership_type %> -->
            </div>
          </div>
        </div>
    </div>


