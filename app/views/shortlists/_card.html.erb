<div class = "container mr-0">
  <div class = "row">
    <div class = "col-12">
      <div class="card" style="width: 20rem;">
        <%= image_tag shortlist.plot.image_url, crop: :fill, class: 'card-img-top' %>
        <div class="card-body">
          <div class= "card-info">
            <h6 class="card-title mt-2"><%= link_to shortlist.plot.title, plot_path(shortlist.plot), class: "card-link grey"%></h6>
            <h6 class= "mt-2"><%= shortlist.plot.property_type %></h6>
          </div>
          <div class = "card-info">
            <h6> <%= shortlist.plot.address.truncate(20, separator: ",", omission: "") %></h6>
            <h6> &pound;<%= shortlist.plot.price %></h6>
          </div>

        </div>
        <div class="card-footer d-flex justify-content-around s_font">
          <div class="card-foot-square">
            <i class="fas fa-chart-area blue mr-2"></i><%= shortlist.plot.plot_size%>m&sup2;
          </div>
          <div class="card-foot-square">|</div>
          <div class="card-foot-square">
            <i class="fas fa-home   blue mr-2"></i><%= shortlist.plot.floor_size %>m&sup2;
          </div>
          <div class="card-foot-square">|</div>
          <div class="card-foot-square">
            <%= shortlist.plot.ownership_type %>
          </div>
        </div>
      </div>
    <%= link_to "X", shortlist_path(shortlist), method: :delete %>
    </div>

  </div>
  <% if shortlist.comments.any?%>
    <%shortlist.comments.each do |comment| %>
      <p> <%= comment.content %> </p>
      <%= link_to "X", comment_path(comment), method: :delete %>
    <% end %>
  <% end %>
  <div>
    <%= simple_form_for [shortlist, comment] do |f| %>
      <%= f.input :content, label: "", placeholder: "Make a note about this plot" %>
      <%= f.submit "Record note", class: "btn btn-primary" %>
    <% end %>


  </div>

</div>

