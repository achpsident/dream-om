<div class = "container-lg margin-bottom">
  <div class="col-8 px-2 col-filter-bar ml-3">
    <%= render 'architects/filter_bar' %>
  </div>

  <div class= "d-flex mt-3">
    <div class="col-12 px-2">
      <% if @architects.size > 0 %>
        <div class="index-grid-architect">
          <% @architects.each do |architect| %>
              <%= render 'architects/card', architect: architect %>
          <% end %>
        </div>
      <% else %>
        <h6 class="pl-4 none-msg"><span class="highlight-blue">Sorry, no architects match your query.</span></h6>
      <% end %>
  </div>
</div>
