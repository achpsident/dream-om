<!-- project tab -->
<div class="tab-pane fade" id="pills-project" role="tabpanel" aria-labelledby="pills-project-tab">
  <% if @user.projects.size == 0 %>
    <h5 class="left-banner py-3"><span class="highlight-purple">No projects to display</span> </h5>
    <hr>
  <% else %>
    <p class="ml-3 pt-5 thin h_font m_font purple">Current Projects </p>
    <% @user.projects.each do |project| %>
      <div class = "card border-0">
        <div class = "card-body">
      <p>Title: <%= project.title %></p>
      <p>Description: <%= truncate project.brief, length: 50, separator: /\s/, omission: '' %></p>
      <p>Budget: <%= project.budget %></p>
      <p>Category: <%=project.category %></p>
      <p>Site Address:<%= project.plot_postcode %> </p>
    </div>
  </div>
    <% end %>
  <% end %>


  <h5 class="mt-3 ml-3">Create a New Project </h5>
  <%= render 'projects/new', project: @project %>
</div>
