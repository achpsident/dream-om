
<div class="container-profile mx-auto">
  <div class="col-12 shadow-sm p-0">
    <div class= "row tab-bar">
      <ul class="nav nav-pills" id="pills-tab" role="tablist">
        <li class="nav-item tab-size h_font">
          <a class="nav-link" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item tab-size h_font">
          <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Plots</a>
        </li>
        <li class="nav-item tab-size h_font">
          <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Architects</a>
        </li>
        <li class="nav-item tab-size h_font">
          <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Appointments</a>
        </li>
      </ul>
    </div>
    <div class="bg-light h-100 mb-0" id="content-wrap">
      <div class="col-xs-12 col-md-8 tab-bar p-0 ">
        <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

            <div class="row align-items-center">
            </div>

            <div class="profile-two-grid">
              <% if @user.shortlists.size == 0 %>
                <div class="m_font mb-3"><span class="highlight-blue">None found</span></div>
              <% else %>
                <% @user.shortlists.each do |shortlist| %>
                    <%= render 'shortlists/card', shortlist: shortlist, comment: @comment %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


