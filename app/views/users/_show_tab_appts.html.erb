<!-- appointments tab -->

<div class="tab-pane fade <%= 'show active' if params[:tab] == 'appt' %>" id="pills-appts" role="tabpanel" aria-labelledby="pills-appts-tab">

  <div class="container">
      <% if @user.appointments.size == 0 %>
      <div class="m_font py-3 pl-5">
          <span class="highlight-blue">No appointments found</span></div>
      <% else %>
        <div class="index-grid-appt">
          <% @user.appointments.each do |appt| %>
          <div>
            <div class="card-date">
              <h6 class="white-bg-appt bold">Architect</h6>
              <h6 class="white-bg-appt bold">Plot location</h6>
              <h6 class="white-bg-appt bold">Date</h6>
              <h6 class="white-bg-appt bold">Time</h6>
            </div>
                <div class="card-body-appt">
                  <div class="">
                    <h6 class="mb-0"><%= appt.architect.name %></h6>
                  </div>
                    <h6 class="lt-grey ">|</h6>
                  <div class="my-3 text-center">
                    <p class="mb-0 h_font thin m_font">London <%= appt.project.plot_postcode %></p>
                  </div>
                  <h6 class="lt-grey ">|</h6>
                  <div class="my-3 text-center">
                    <p class="mb-0 h_font thin m_font purple"><%= appt.appt_time.strftime("%d") %></p>
                    <p class="mb-0"><%= appt.appt_time.strftime("%B")[0..2] %></p>
                  </div>
                  <h6 class="lt-grey ">|</h6>
                  <div class="my-3 text-center">
                    <p class="mb-0 h_font thin m_font purple"><%= "#{appt.appt_time.hour >= 12 ? appt.appt_time.hour - 12 : appt.appt_time.hour}:00" %></p>
                    <p class="mb-0"><%= appt.appt_time.hour >= 12 ? "PM" : "AM" %></p>
                  </div>
                </div>
          <% end %>
        </div>
      <% end %>
      </div>
  </div>
</div>

